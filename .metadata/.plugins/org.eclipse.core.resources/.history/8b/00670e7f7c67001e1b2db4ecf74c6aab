package entities;

import java.util.Scanner;

public class Matrix {
	Scanner sc = new Scanner(System.in);
	int n;
	int col;
	int lin;
	int matriz[][];

	public Matrix(int n) {
		super();
		Matrix.n = n;
	}
	
	public int[][] buildmatriz() {
		int matriz[][] = new int[n][n];
		return matriz;
	}
	
	public void definematriz() {
		for(int i=0; i<n;i++) {
			for (int j=0; j<n; j++) {
				matriz[i][j] = sc.nextInt();
			}
		}
	}
	
	
}
